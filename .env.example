# Polkadot UI Template - Environment Configuration
# Copy this file to .env and customize for your needs

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Choose your default network endpoint
# Polkadot Mainnet (recommended for production)
VITE_WS_ENDPOINT=wss://rpc.polkadot.io

# Alternative endpoints:
# Westend Testnet (for testing)
# VITE_WS_ENDPOINT=wss://westend-rpc.polkadot.io

# Kusama Network
# VITE_WS_ENDPOINT=wss://kusama-rpc.polkadot.io

# Local Development
# VITE_WS_ENDPOINT=ws://127.0.0.1:9944

# Custom RPC endpoint
# VITE_WS_ENDPOINT=wss://your-custom-node.com

# =============================================================================
# CHAIN SETTINGS
# =============================================================================

# Default chain to connect to (polkadot, kusama, westend, local)
VITE_DEFAULT_CHAIN=polkadot

# Block explorer URL (for transaction links)
VITE_EXPLORER_URL=https://polkadot.subscan.io

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# App name (displayed in UI)
VITE_APP_NAME=Polkadot UI Template

# App description (for SEO)
VITE_APP_DESCRIPTION=A modern React template for building Polkadot applications

# App URL (your deployed URL)
VITE_APP_URL=https://your-app.com

# Enable/disable features
VITE_ENABLE_TESTNET=true
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# DEVELOPER SETTINGS
# =============================================================================

# Enable verbose logging in development
VITE_DEBUG=false

# Refresh interval for subscriptions (milliseconds)
VITE_REFRESH_INTERVAL=6000

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================

# Analytics (e.g., Google Analytics, Plausible)
# VITE_ANALYTICS_ID=

# Error tracking (e.g., Sentry)
# VITE_SENTRY_DSN=

# API keys for external services
# VITE_API_KEY=
